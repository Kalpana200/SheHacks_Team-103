<%- include("header"); -%>


    <h1 class="text-dm vacancy">Job Vacancies</h1>


    <% for(var i=0;i<jobInfo.length;i++) { %>
      

        <div data-aos="flip-up">
            <div class="card text-center custom-card-dm sirj-card">
                <div class="card-header">
                    <h2 class="sirj-heading">
                        <%= jobInfo[i].company.display_name %>
                    </h2>
                </div>
                <div class="card-body">
                    <h4 class="sirj-content">Location : <%= jobInfo[i].location.display_name %>
                    </h4>
                    <h4 class="sirj-content"> Designation : <%= (jobInfo[i].title).replace( /(<([^>]+)>)/ig, ''); %>
                    </h4>
                    <h4 class="sirj-content"> <%= jobInfo[i].contract_time %>
                    </h4>
                    <h4 class="sirj-content">Vacancy from : <%= jobInfo[i].created.substring(0,10) %>
                    </h4>
                </div>
                <div class="card-footer" style="padding-bottom:10px;">
                    <a href="<%= jobInfo[i].redirect_url %>" class="btn btn-lg btn-light custom-btn" target="_blank">Apply</a>
                </div>

            </div>
           
        </div>
      
        

        <% } %>



            <%- include("footer"); -%>
